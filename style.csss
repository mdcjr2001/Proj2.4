* {
    background-color: lightgrey;
}

header {
    background-color: lightgrey;
    padding: 30px;
    text-align: center;
    font-size: 35px;
    color: black;
}

nav{
    border: black;
    width: 50%;
    background-color: lightgrey;
    padding: 1rem;
    text-align: center;
    font-size: 25px;
    color: black;
}
nav p{
    color: black;
}
footer{
    background-color: lightgrey;
    height: 2.5rem;
    text-align: left;
    display: flex;
    justify-content: center;
    align-items: center;
    color: black;
    position: fixed;
    bottom: 0;
    width: 100%;
}
footer p{
    border: 2px ;
}
article{
    display: flex;
    justify-content:center;
    align-items: center;
    padding-top: 1rem;
    padding-bottom: 1rem;
    padding: 1rem 0 0 0;
    /*border :2px solid red;*/
}
article button{
    height: 2rem;
}
article h1{
    border: 2px solid black;
}